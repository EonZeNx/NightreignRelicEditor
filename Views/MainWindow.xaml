<Window x:Class="NightreignRelicEditor.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:NightreignRelicEditor.Views.Controls"
        xmlns:viewModels="clr-namespace:NightreignRelicEditor.ViewModels"
        mc:Ignorable="d"
        Title="Nightreign Relic Editor" Width="1400" Height="800" ResizeMode="CanResize">
    <Window.DataContext>
        <viewModels:MainWindowViewModel/>
    </Window.DataContext>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Grid Grid.Column="0">
            <TabControl Margin="0,0,0,0">
                <TabItem Header="Relic Effects">
                    <!-- this is always null (skill issue), setting it in constructor too -->
                    <controls:RelicEffects x:Name="RelicEffects" RelicManager="{Binding RelicManager}"/>
                </TabItem>
                <TabItem Header="Presets">
                    <Grid Margin="0,0,0,0">
                        <Button Content="Load" HorizontalAlignment="Left" Margin="10,37,0,0" VerticalAlignment="Top" Width="70" Click="Button_LoadPreset" Height="20"/>
                        <Button Content="Save" HorizontalAlignment="Left" Margin="85,37,0,0" VerticalAlignment="Top" Width="70" Click="Button_SaveNewPreset" Height="20"/>
                        <Button Content="Update" HorizontalAlignment="Left" Margin="160,37,0,0" VerticalAlignment="Top" Width="70" Click="Button_UpdatePreset" Height="20"/>
                        <Button Content="Delete" HorizontalAlignment="Left" Margin="310,37,0,0" VerticalAlignment="Top" Width="70" Click="Button_DeletePreset" Height="20"/>
                        <Button Content="Rename" HorizontalAlignment="Center" Margin="0,37,0,0" VerticalAlignment="Top" Width="70" Click="Button_RenamePreset" Height="20"/>
                        <Button Content="Move Up" HorizontalAlignment="Left" Margin="385,37,0,0" VerticalAlignment="Top" Width="70" Click="Button_MoveUpPreset" Height="20"/>
                        <Button Content="Move Down" HorizontalAlignment="Left" Margin="460,37,0,0" VerticalAlignment="Top" Width="70" Click="Button_MoveDownPreset" Height="20"/>


                        <Button Content="Clear" HorizontalAlignment="Left" Margin="460,11,0,0" VerticalAlignment="Top" Width="70" Click="Button_ClearPresetFilter" Height="20"/>

                        <ListBox x:Name="listboxPresets" d:ItemsSource="{d:SampleData ItemCount=15}" Margin="10,62,10,10" SelectedIndex="0">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}" />
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                            <ListBox.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Load" Click="Button_LoadPreset"/>
                                    <MenuItem Header="Update" Click="Button_UpdatePreset"/>
                                    <MenuItem Header="Rename" Click="Button_RenamePreset"/>
                                    <MenuItem Header="Delete" Click="Button_DeletePreset"/>
                                    <MenuItem Header="Move Up" Click="Button_MoveUpPreset"/>
                                    <MenuItem Header="Move Down" Click="Button_MoveDownPreset"/>
                                </ContextMenu>
                            </ListBox.ContextMenu>
                        </ListBox>
                        <ComboBox x:Name="comboboxFilterPresets" HorizontalAlignment="Left" Margin="44,10,85,0" VerticalAlignment="Top" Width="411" Height="22" IsEditable="True" TextBoxBase.TextChanged="comboboxFilterPresets_TextChanged">
                            <ComboBoxItem>Duchess</ComboBoxItem>
                            <ComboBoxItem>Executor</ComboBoxItem>
                            <ComboBoxItem>Guardian</ComboBoxItem>
                            <ComboBoxItem>Ironeye</ComboBoxItem>
                            <ComboBoxItem>Raider</ComboBoxItem>
                            <ComboBoxItem>Recluse</ComboBoxItem>
                            <ComboBoxItem>Revenant</ComboBoxItem>
                            <ComboBoxItem>Wylder</ComboBoxItem>
                        </ComboBox>
                        <TextBlock HorizontalAlignment="Left" Margin="10,13,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="en-au" Text="Filter:"/></TextBlock>

                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>
        
        <Border Grid.Column="1" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                
                <controls:RelicData x:Name="RelicDataSlot0"
                                    RelicManager="{Binding RelicManager}" RelicSlot="0"
                                    Grid.Row="0" Grid.Column="0"/>
                <controls:RelicData x:Name="RelicDataSlot1"
                                    RelicManager="{Binding RelicManager}" RelicSlot="1"
                                    Grid.Row="1" Grid.Column="0"/>
                <controls:RelicData x:Name="RelicDataSlot2"
                                    RelicManager="{Binding RelicManager}" RelicSlot="2"
                                    Grid.Row="2" Grid.Column="0"/>
                
                
                <controls:RelicData x:Name="RelicDataSlot3"
                                    RelicManager="{Binding RelicManager}" RelicSlot="3"
                                    Grid.Row="0" Grid.Column="1"/>
                <controls:RelicData x:Name="RelicDataSlot4"
                                    RelicManager="{Binding RelicManager}" RelicSlot="4"
                                    Grid.Row="1" Grid.Column="1"/>
                <controls:RelicData x:Name="RelicDataSlot5"
                                    RelicManager="{Binding RelicManager}" RelicSlot="5"
                                    Grid.Row="2" Grid.Column="1"/>

                
                <Grid Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Button Grid.Row="0" Grid.Column="0" x:Name="buttonSetRelicsInGame" Content="Set relics in game" Click="Button_SetRelicsInGame"/>
                    <Button Grid.Row="0" Grid.Column="1" x:Name="buttonImportRelicsFromGame" Content="Import relic data from game" Click="Button_GetRelicsFromGame"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" TextWrapping="Wrap" FontWeight="Bold"><Run Language="en-au" Text="Status:"/></TextBlock>
                    <TextBlock Grid.Row="2" Grid.Column="0" x:Name="textConnectionStatus" TextWrapping="Wrap"><Run Language="en-au" Text="Not connected"/></TextBlock>

                    <Button Grid.Row="3" Grid.Column="0" x:Name="buttonConnect" Content="Connect" Click="Button_Connect"/>
                    <CheckBox Grid.Row="4" Grid.Column="0" x:Name="checkboxAutoconnect" Content="Auto-connect at startup"/>
                    
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
