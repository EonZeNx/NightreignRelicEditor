<Window x:Class="NightreignRelicEditor.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:NightreignRelicEditor.Views.Controls"
        xmlns:viewModels="clr-namespace:NightreignRelicEditor.ViewModels"
        mc:Ignorable="d"
        Title="Nightreign Relic Editor" Width="1400" Height="800" ResizeMode="CanResize">
    <Window.DataContext>
        <viewModels:MainWindowViewModel/>
    </Window.DataContext>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Grid Grid.Column="0">
            <TabControl Margin="0,0,0,0">
                <TabItem Header="Relic Effects">
                    <!-- this is always null (skill issue), setting it in constructor too -->
                    <controls:RelicEffects x:Name="RelicEffects" RelicManager="{Binding RelicManager}"/>
                </TabItem>
                <TabItem Header="Presets">
                    <!-- this is always null (skill issue), setting it in constructor too -->
                    <controls:RelicPresets x:Name="RelicPresets" RelicManager="{Binding RelicManager}"/>
                </TabItem>
            </TabControl>
        </Grid>
        
        <Border Grid.Column="1" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                
                <controls:RelicData x:Name="RelicDataSlot0"
                                    RelicManager="{Binding RelicManager}" RelicSlot="0"
                                    Grid.Row="0" Grid.Column="0"/>
                <controls:RelicData x:Name="RelicDataSlot1"
                                    RelicManager="{Binding RelicManager}" RelicSlot="1"
                                    Grid.Row="1" Grid.Column="0"/>
                <controls:RelicData x:Name="RelicDataSlot2"
                                    RelicManager="{Binding RelicManager}" RelicSlot="2"
                                    Grid.Row="2" Grid.Column="0"/>
                
                
                <controls:RelicData x:Name="RelicDataSlot3"
                                    RelicManager="{Binding RelicManager}" RelicSlot="3"
                                    Grid.Row="0" Grid.Column="1"/>
                <controls:RelicData x:Name="RelicDataSlot4"
                                    RelicManager="{Binding RelicManager}" RelicSlot="4"
                                    Grid.Row="1" Grid.Column="1"/>
                <controls:RelicData x:Name="RelicDataSlot5"
                                    RelicManager="{Binding RelicManager}" RelicSlot="5"
                                    Grid.Row="2" Grid.Column="1"/>

                
                <Grid Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Button x:Name="ButtonSetRelicsInGame"
                            Grid.Row="0" Grid.Column="0"
                            Margin="2"
                            Content="Set relics in game" Click="Button_SetRelicsInGame"/>
                    <Button x:Name="ButtonImportRelicsFromGame"
                            Grid.Row="0" Grid.Column="1"
                            Margin="2"
                            Content="Import relic data from game" Click="Button_GetRelicsFromGame"/>

                    <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Margin="2">
                        <TextBlock TextWrapping="Wrap" FontWeight="Bold" Margin="2">
                            <Run Language="en-au" Text="Status:"/>
                        </TextBlock>
                        <TextBlock x:Name="TextblockConnectionStatus" TextWrapping="Wrap" Margin="2">
                            <Run Language="en-au" Text="Not connected"/>
                        </TextBlock>
                    </StackPanel>

                    <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Button x:Name="ButtonConnect"
                                Grid.Row="0" Grid.Column="0"
                                Margin="2"
                                Content="Connect" Click="Button_Connect"/>
                        <CheckBox x:Name="CheckboxAutoConnect"
                                  Grid.Row="0" Grid.Column="1"
                                  Margin="2" HorizontalAlignment="Left" VerticalAlignment="Center"
                                  Content="Auto-connect at startup"/>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
