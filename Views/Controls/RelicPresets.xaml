<UserControl x:Class="NightreignRelicEditor.Views.Controls.RelicPresets"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:NightreignRelicEditor.Views.Controls"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Grid Grid.Row="0" Grid.Column="0" 
              HorizontalAlignment="Stretch" Margin="8, 8, 8, 4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Row="0" Grid.Column="0"
                       VerticalAlignment="Center" TextWrapping="Wrap" Margin="0, 0, 4, 0">
                <Run Language="en-au" Text="Filter:"/>
            </TextBlock>
    
            <ComboBox Grid.Row="0" Grid.Column="1" x:Name="ComboboxFilterPresets" 
                      HorizontalAlignment="Stretch" MinHeight="22" IsEditable="True" Margin="0, 0, 4, 0"
                      TextBoxBase.TextChanged="comboboxFilterPresets_TextChanged">
                <ComboBoxItem>Duchess</ComboBoxItem>
                <ComboBoxItem>Executor</ComboBoxItem>
                <ComboBoxItem>Guardian</ComboBoxItem>
                <ComboBoxItem>Ironeye</ComboBoxItem>
                <ComboBoxItem>Raider</ComboBoxItem>
                <ComboBoxItem>Recluse</ComboBoxItem>
                <ComboBoxItem>Revenant</ComboBoxItem>
                <ComboBoxItem>Wylder</ComboBoxItem>
            </ComboBox>
    
            <Button Grid.Row="0" Grid.Column="2" 
                    Content="Clear" Width="80" MinHeight="22"
                    Click="Button_ClearPresetFilter"/>
        </Grid>
        
        <Grid Grid.Row="1" Grid.Column="0"
              HorizontalAlignment="Stretch" Margin="8, 4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <Button Grid.Column="0"
                    Content="Load" Width="80" MinHeight="22" Margin="0, 0, 4, 0"
                    Click="Button_LoadPreset"/>
            
            <Button Grid.Column="1"
                    Content="Save" Width="80" MinHeight="22" Margin="0, 0, 4, 0"
                    Click="Button_SaveNewPreset"/>
            
            <Button Grid.Column="2"
                    Content="Update" Width="80" MinHeight="22" Margin="0, 0, 4, 0"
                    Click="Button_UpdatePreset"/>
            
            
            
            <Button Grid.Column="4"
                    Content="Delete" Width="80" MinHeight="22" Margin="0, 0, 4, 0"
                    Click="Button_DeletePreset"/>
            
            <Button Grid.Column="5"
                    Content="Rename" Width="80" MinHeight="22" Margin="0, 0, 4, 0"
                    Click="Button_RenamePreset"/>
            
            <Button Grid.Column="6"
                    Content="↑" Width="20" MinHeight="22" Margin="0, 0, 4, 0"
                    Click="Button_MoveUpPreset"/>
            
            <Button Grid.Column="7"
                    Content="↓" Width="20" MinHeight="22"
                    Click="Button_MoveDownPreset"/>
        </Grid>


        <ListBox Grid.Row="2" Grid.Column="0" x:Name="ListboxPresets"
                 d:ItemsSource="{d:SampleData ItemCount=15}" SelectedIndex="0" Margin="8, 4, 8, 8">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
            <ListBox.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Load" Click="Button_LoadPreset"/>
                    <MenuItem Header="Update" Click="Button_UpdatePreset"/>
                    <MenuItem Header="Rename" Click="Button_RenamePreset"/>
                    <MenuItem Header="Delete" Click="Button_DeletePreset"/>
                    <MenuItem Header="Move Up" Click="Button_MoveUpPreset"/>
                    <MenuItem Header="Move Down" Click="Button_MoveDownPreset"/>
                </ContextMenu>
            </ListBox.ContextMenu>
        </ListBox>
    </Grid>
</UserControl>
