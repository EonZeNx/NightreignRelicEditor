<UserControl x:Class="NightreignRelicEditor.Views.Controls.RelicEffects"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModels="clr-namespace:NightreignRelicEditor.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="800">
    <UserControl.DataContext>
        <viewModels:RelicEffectsViewModel/>
    </UserControl.DataContext>
    
    <Grid Margin="4, 4, 4, 0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0" Margin="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0"
                HorizontalAlignment="Left" Margin="2"
                TextWrapping="Wrap" VerticalAlignment="Center">
                <Run Language="en-au" Text="Filter:"/>
            </TextBlock>
            
            <TextBox x:Name="TextboxEffectsFilter"
                     Grid.Column="1"
                     Height="22" Margin="2" TextWrapping="Wrap" VerticalAlignment="Center"
                     TextChanged="TextboxEffectsFilter_OnTextChanged"/>
            
            <Button Grid.Column="2"
                    Content="Clear"
                    HorizontalAlignment="Center" Margin="2" VerticalAlignment="Center" Width="80"
                    Click="ClearEffectFilter"/>
        </Grid>
        
        <Grid Grid.Row="1" Margin="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <CheckBox x:Name="CheckboxShowUnique"
                      Grid.Column="0"
                      Content="Show unique relic effects"
                      Margin="2" HorizontalAlignment="Left" VerticalAlignment="Center"
                      IsChecked="False" Checked="ToggleShowUniqueEffects" Unchecked="ToggleShowUniqueEffects"/>
        
            <StackPanel Grid.Column="1" 
                        Orientation="Horizontal" Margin="2"
                        HorizontalAlignment="Left" VerticalAlignment="Top">
                <TextBlock TextWrapping="Wrap" Margin="2" VerticalAlignment="Center">
                    <Run Language="en-au" Text="Add to:"/>
                </TextBlock>
                <ComboBox Width="100" Margin="2"
                          ItemsSource="{Binding RelicSlots}"
                          DisplayMemberPath="Name"
                          SelectedValuePath="Value"
                          SelectedValue="{Binding SelectedRelicSlot, Mode=TwoWay}"/>
                <ComboBox Width="100" Margin="2"
                          ItemsSource="{Binding RelicEffectSlots}"
                          DisplayMemberPath="Name"
                          SelectedValuePath="Value"
                          SelectedValue="{Binding SelectedRelicEffectSlot, Mode=TwoWay}"/>
                <Button Content="Set!" Width="80" Margin="2, 2, 0, 2"
                        IsEnabled="{Binding CanSetEffect}"
                        Click="Button_SetRelicEffect"/>
            </StackPanel>
        </Grid>
        
        <ListView Grid.Row="2" x:Name="ListViewRelicEffects" d:ItemsSource="{d:SampleData ItemCount=5}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Id" Width="70" DisplayMemberBinding="{Binding Path=Id}"/>
                    <GridViewColumn Header="Effect" Width="320" DisplayMemberBinding="{Binding Path=Description}"/>
                    <GridViewColumn Header="Category" Width="60" DisplayMemberBinding="{Binding Path=Category}"/>
                    <GridViewColumn Header="Order" Width="60" DisplayMemberBinding="{Binding Path=OrderGroup}"/>
                    <GridViewColumn Header="Depth?" Width="60" DisplayMemberBinding="{Binding Path=IsDeepEffect}"/>
                    <GridViewColumn Header="Curse?" Width="60" DisplayMemberBinding="{Binding Path=IsCurse}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
