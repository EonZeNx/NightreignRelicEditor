<UserControl x:Class="NightreignRelicEditor.Views.Controls.RelicEffects"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModels="clr-namespace:NightreignRelicEditor.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="600">
    <UserControl.DataContext>
        <viewModels:RelicEffectsViewModel/>
    </UserControl.DataContext>
    
    <Grid>
        <TextBox x:Name="textboxFilterEffects"
                 Height="22" Margin="44,10,85,0" TextWrapping="Wrap" VerticalAlignment="Top"
                 TextChanged="TextboxFilterEffects_OnTextChanged"/>
        <TextBlock
            HorizontalAlignment="Left" Margin="10,13,0,0"
            TextWrapping="Wrap" VerticalAlignment="Top">
            <Run Language="en-au" Text="Filter:"/>
        </TextBlock>
        <CheckBox x:Name="checkboxShowUnique"
                  Content="Show unique relic effects" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top"
                  IsChecked="False" Checked="ToggleShowUniqueEffects" Unchecked="ToggleShowUniqueEffects"/>
        <Button Content="Clear"
                HorizontalAlignment="Right" Margin="0,11,10,0" VerticalAlignment="Top" Width="70"
                Click="ClearEffectFilter"/>
        <ListView x:Name="listviewRelicEffects" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,62,10,10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Id" Width="60" DisplayMemberBinding="{Binding Path=Id}"/>
                    <GridViewColumn Header="Effect" Width="310" DisplayMemberBinding="{Binding Path=Description}"/>
                    <GridViewColumn Header="Category" Width="60" DisplayMemberBinding="{Binding Path=Category}"/>
                    <GridViewColumn Header="Order" Width="60" DisplayMemberBinding="{Binding Path=OrderGroup}"/>
                    <GridViewColumn Header="Depth?" Width="60" DisplayMemberBinding="{Binding Path=IsDeepEffect}"/>
                    <GridViewColumn Header="Curse?" Width="60" DisplayMemberBinding="{Binding Path=IsCurse}"/>
                </GridView>
            </ListView.View>
        </ListView>
        
        <StackPanel Orientation="Horizontal" Margin="265,39,0,0"
                    HorizontalAlignment="Left" VerticalAlignment="Top">
            <TextBlock TextWrapping="Wrap" Margin="0, 0, 2, 0">
                <Run Language="en-au" Text="Add to:"/>
            </TextBlock>
            <ComboBox Width="100"
                      ItemsSource="{Binding RelicSlots}"
                      DisplayMemberPath="Name"
                      SelectedValuePath="Value"
                      SelectedValue="{Binding SelectedRelicSlot, Mode=TwoWay}"/>
            <ComboBox Width="100"
                      ItemsSource="{Binding RelicEffectSlots}"
                      DisplayMemberPath="Name"
                      SelectedValuePath="Value"
                      SelectedValue="{Binding SelectedRelicEffectSlot, Mode=TwoWay}"/>
            <Button Content="Set!" Width="80"
                    Click="Button_AddRelicEffect1"/>
        </StackPanel>
    </Grid>
</UserControl>
